#include <iostream>
#include <windows.h>
#include <algorithm>
#include <string>
#include <cmath>

struct main_character {
	double physical_damage, magical_damage, health;
	std::string name, role, action;
};

struct enemy_character {
	double physical_damage, magical_damage, health;
	std::string name;
};

struct character_level {
	double physical_damage, magical_damage, health;
};

void Narrator(int count) {
	main_character player;
	std::string N1Story = "In the realm of Astraloria, a land steeped in ancient magic and guarded by the celestial dance of constellations, a shadow\nfalls across the night sky. The once radiant stars have dimmed, and the constellations have vanished, leaving Astraloria in\na state of cosmic disarray. Whispers among the wisest sages speak of an impending doom that threatens to engulf the entire realm.\n\nLegends tell of the Loreweaver, a legendary figure with the ability to manipulate the very fabric of the cosmos.It is said\nthat the Loreweaver's Veil, an artifact of immense power, can unveil the hidden pathways to the Lost Constellations and\nrestore balance to Astraloria. As a chosen adventurer, you find yourself drawn into this cosmic saga.\n\nYour journey begins in the ancient city of Starhaven, where the elders speak of prophecies that foretell your destiny.\nArmed with a basic understanding of celestial magic and a quest bestowed upon you by the ethereal Oracle, you set forth\ninto the mystical landscapes of Astraloria.";
	std::string NCharacter_selection = "Ahhh the chosen one welcome! For you are destined to be the savior of this world. Now you are a?";
	char slow;

	if (count == 1) {
		count++;
		for (int i = 0; i < N1Story.length(); i++) {
			slow = N1Story[i];
			std::cout << slow;	
			Sleep(10);
		}
		std::cin.get();
	}
	else if (count == 2) {
		count++;
		for (int i = 0; i < NCharacter_selection.length(); i++) {
				slow = NCharacter_selection[i];
				std::cout << slow;
				Sleep(10);
		}
	}		
}

void Story() {
	main_character player;
	std::string A1Story = "Ahh so you're awake! You've been out for ours.";
	char slow;
}


int main() {
	main_character player;
	int Ncount = 1;

	for (int i = 1; i <= 70; i++) {
		std::cout << "#";
		if (i == 70) {
			std::cout << "\n";
			for (int j = 0; j <= 8; j++) {
				std::cout << " ";
			}
			std::cout << "Loreweaver's Veil: Quest for the Lost Constellations";
			for (int j = 0; j <= 9; j++) {
				std::cout << " ";
				if (j == 9) {
					std::cout << "\n";
					for (int i = 1; i <= 70; i++) {
						std::cout << "#";
					}
					std::cout << "\n\n";
					for (int i = 0; i <= 28; i++) {
						std::cout << " ";
						if (i == 28) {
							std::cout << "Press Enter\n";
							getline(std::cin, player.action);
						}
					}
				}
			}
		}
	}

	system("CLS");

	/*Intro Story*/
	Narrator(Ncount);
	Ncount++;
	system("CLS");

	/*Character Customization*/
	std::cout << "What is your name Adventurer?\n";
	std::cin >> player.name;

	transform(player.name.begin(), player.name.end(), player.name.begin(), toupper); 

	system("CLS");
	Narrator(Ncount);
	Ncount++;

	std::cout << "\n\nChoose a Role:\n";
	std::cout << "Warrior\n" << "Sorcerer\n" << "Rogue\n" << "Ranger\n\n";
	std::cin >> player.role;

	transform(player.role.begin(), player.role.end(), player.role.begin(), toupper);
}

